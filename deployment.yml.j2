---

apiVersion: apps/v1
kind: Deployment
metadata:
  name: joovy
spec:
  selector:
    matchLabels:
      app: joovy
  template:
    metadata:
      labels:
        app: joovy
    spec:
      containers:
      - name: indexer
        image: "{{ registry }}/misc/joovy:{{ version }}"
        resources:
          requests:
            memory: "80Mi"
            cpu: "10m"
          limits:
            memory: "512Mi"
            cpu: "2000m"
        volumeMounts:
          - mountPath: /server/.env
            name: env-config
            subPath: .env
      volumes:
        - name: env-config
          secret:
            secretName: env-config
